//  General
//  ───────────────────────────────────

{{#each general as |color|}}
@oc-{{color.name}}:         {{color.hex}};
{{/each}}
{{#each colors as |color|}}


//  {{capitalize color.name}}
//  ───────────────────────────────────

@oc-{{color.name}}-list: {{join color.hex ', '}};

@oc-{{color.name}}-0: extract(@oc-{{color.name}}-list, 1);
@oc-{{color.name}}-1: extract(@oc-{{color.name}}-list, 2);
@oc-{{color.name}}-2: extract(@oc-{{color.name}}-list, 3);
@oc-{{color.name}}-3: extract(@oc-{{color.name}}-list, 4);
@oc-{{color.name}}-4: extract(@oc-{{color.name}}-list, 5);
@oc-{{color.name}}-5: extract(@oc-{{color.name}}-list, 6);
@oc-{{color.name}}-6: extract(@oc-{{color.name}}-list, 7);
@oc-{{color.name}}-7: extract(@oc-{{color.name}}-list, 8);
@oc-{{color.name}}-8: extract(@oc-{{color.name}}-list, 9);
@oc-{{color.name}}-9: extract(@oc-{{color.name}}-list, 10);
{{/each}}